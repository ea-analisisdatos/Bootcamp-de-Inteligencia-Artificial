    "taximetro = True\n",
    "movimiento = True # condicion de parada o marcha\n",
    "\n",
    "def precio():\n",
    "    if movimiento:\n",
    "        precio += 0.05\n",
    "    else:\n",
    "        precio += 0.02\n",
    "\n",
    "\n",
    "while taximetro:\n",
    "    threading.timer(precio, 1)"
